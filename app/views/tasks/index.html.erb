<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the tasklist</h1>
    </div>
  </div>
<% end %>
<div>
  <%= paginate @tasks %>
</div>
<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>
